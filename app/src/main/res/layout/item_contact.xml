<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="3dp"
    android:id="@+id/foreground"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivContactPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_account_circle_blue_grey_300_36dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:fontFamily="@font/aclonica"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:text="Noel Emmanuel Roodly" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/tvContactName"
        android:layout_marginTop="33dp"
        android:shadowColor="@android:color/holo_blue_dark"
        tools:text="37396810"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivContactPhoto"
        android:layout_alignStart="@+id/tvContactName"
        android:textColor="@android:color/holo_blue_dark"
        tools:text="emmanuelroodly@hotmail.com" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivContactPhoto" />

</RelativeLayout>